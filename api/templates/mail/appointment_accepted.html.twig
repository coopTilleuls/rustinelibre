{% extends 'mail/mail_layout.html.twig' %}

{% block body_mail %}
    <div id="title" style="height: 100px; background-color: #ff9458; text-align: center; font-size: 3em">
        Rendez-vous confirmé !
    </div>

    <div>
        <table class="container" style="margin-top: 20px">
            <tr>
                <td class="left-column">
                    <ul style="list-style: none">
                        <li>
                            <strong>Le {{ appointment.slotTime | date('d/m/y') }} à {{ appointment.slotTime | date('H:i') }}
                            </strong>
                        </li>
                        <li style="margin-top: 30px">
                            <strong>
                                Avec {{ appointment.repairer.name }}
                            </strong>
                        </li>
                        <li style="margin-top: 30px">
                            <strong>
                                Lieu du RDV :
                                {% if appointment.address %}
                                    {{ appointment.address }}
                                {% else %}
                                    {{ appointment.repairer.streetNumber }}
                                    {{ appointment.repairer.street }},
                                    {{ appointment.repairer.postCode }}
                                    {{ appointment.repairer.city }}
                                {% endif %}
                            </strong>
                        </li>
                    </ul>
                </td>
            </tr>
        </table>
    </div>

    <div style="margin-top: 30px">
        <table>
            <tr>
                <td>
                    <table style="width: 100%; max-width: 600px;">
                        <tr>
                            <td style="padding: 10px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td>
                                            <a target="_blank" href="{{ annulationUrl }}" style="display: inline-block; width: 200px; height: 100px; background-color: lightgray; color: black; text-decoration: none; font-weight: bold; font-size: 16px; text-align: center; line-height: 100px;">
                                                Annuler
                                            </a>
                                        </td>
                                        <td style="margin-left: 50px">
                                            <a target="_blank" href="{{ discussionUrl }}" style="display: inline-block; width: 200px; height: 100px; background-color: #7b61ff; color: white; text-decoration: none; font-weight: bold; font-size: 16px; text-align: center; line-height: 100px;">
                                                Envoyer un message
                                            </a>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}
