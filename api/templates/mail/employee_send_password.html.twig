{% extends 'mail/mail_layout.html.twig' %}

{% block body_mail %}
<div style="padding:20px; text-align:center">
  <h1 style="font-weight:700; font-size:28px; margin-bottom:30px">Vos accès réparateur</h1>
  <p style="margin-bottom:14px; font-size:14px;">{{ repairer.name }} vient de vous créer un compte réparateur sur la plateforme Rustine Libre.</p>
  <p style="margin-bottom:14px; font-size:14px;">Pour vous connecter :</p>
  <p style="margin-bottom:7px; font-size:14px;">URL : <a href="{{ webAppUrl }}">rustine-libre.org</a></p>
  <p style="margin-bottom:7px; font-size:14px;">IDENTIFIANT : {{ employee.email }}</p>
  <p style="margin-bottom:7px; font-size:14px;">MOT DE PASSE : {{ employee.plainPassword }}</p>
  <p style="margin-bottom:14px; font-size:14px;">Ce mot de passe est temporaire, veillez à le modifier depuis votre espace personnel.</p>
</div>
{% endblock %}
