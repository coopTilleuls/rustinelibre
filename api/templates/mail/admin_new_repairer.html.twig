{% extends 'mail/mail_layout.html.twig' %}

{% block body_mail %}
    <div id="title" style="height: 100px; background-color: #ff9458; text-align: center; font-size: 3em">
        Demande d'inscription réparateur
    </div> <br />

    <div>
        Un nouveau réparateur a demandé à s'inscrire :
        <ul>
            <li>
                {{ repairer.name }}
            </li>
            <li>
                {{ repairer.streetNumber }} {{ repairer.street }}, {{ repairer.city }}
            </li>
            <li>
                {{ repairer.repairerType.name }}
            </li>
            {% if repairer.comment %}
                <li>
                    {{ repairer.comment }}
                </li>
            {% endif %}
        </ul>
    </div>

    <div style="margin-top:20px">
        <p>
            Pour consulter sa demande d'inscription et la valider : <a href="{{ repairerAdminUrl }}">cliquez ici</a>
        </p>
    </div>
{% endblock %}
